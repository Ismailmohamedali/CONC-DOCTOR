<div class="row">
    @{
        foreach(var item in Model)
        {
            <div class="col-4 d-flex mb-3">
                <div class="card" style="width: 18rem;">
                    <img src="~/images/@item.Img" class="card-img-top" alt="...">
                    <div class="card-body">
                        <div class="row">
                            <h3 class="col-10">@item.Name</h3>
                            <div class="col-2"><span class="badge text-bg-success">Rate/5</span></div>
                        </div>
                        <p class="card-text">Specialization: @item.Specialization</p>
                        <a href="#" class="btn btn-primary">Book Appointment</a>
                    </div>
                </div>
            </div>
        }
            
        }
</div>
    